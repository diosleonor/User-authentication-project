<div class="container" style="margin-top: 80px;
  margin-bottom: 80px;">
	<form action="/result" method="POST" class="form-signin" style="max-width: 380px; padding: 15px 35px 45px; margin: 0 auto; background-color: #fff; border: 1px solid rgba(0,0,0,0.1);display: flex; flex-direction: column;">       
		<h2 class="form-signin-heading" style="margin-bottom: 30px;">Please login</h2>
		<input type="text" class="form-control" style="position: relative;font-size: 16px;height: auto;padding: 10px;margin-bottom: -1px;border-bottom-left-radius: 0;border-bottom-right-radius: 0;" name="username" placeholder="Email Address" required/>
		<input type="password" class="form-control" style="position: relative;font-size: 16px;height: auto;padding: 10px;margin-bottom: 20px;border-top-left-radius: 0;border-top-right-radius: 0;" name="password" placeholder="Password" required/>      
		<button class="btn btn-lg btn-block btn-primary" type="submit" style="">Login</button>
		<p style="margin-top: 10px;">
			{{#if loginFailed}}{{loginFailed}}{{/if}}
		</p>
	</form>
</div>
